{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types" : ["node"],

    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "../renderer/src/*"
      ],
      "@api/*" : [
        "../api/src/*"
      ],
      "@main/*" : [
        "../main/src/*"
      ],
      "@preload/*" : [
        "../preload/src/*"
      ],
      "@assets/*" : [
        "../renderer/assets/*"
      ],
      "@buildResources/*" : [
        "../../buildResources/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
