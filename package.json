{
  "name": "fukayo",
  "description": "Read your favorite manga from your favorite website, keep track of your reading progress and share your reading history with your friends.",
  "author": "Jean-Philippe <JiPaix> ALLEGRO",
  "homepage": "https://fukayo.com",
  "repository": "github:JiPaix/Fukayo",
  "license": "MIT",
  "version": "0.19.28",
  "private": false,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:i18n && npm run build:main && npm run build:preload && npm run build:renderer && npm run build:api",
    "prebuild:api": "rimraf ./packages/api/dist",
    "prebuild:main": "rimraf ./packages/main/dist",
    "prebuild:preload": "rimraf ./packages/preload/dist",
    "prebuild:renderer": "rimraf ./packages/renderer/dist",
    "prebuild:i18n": "rimraf ./packages/i18n/dist",
    "build:i18n": "cd ./packages/i18n && vite build",
    "build:api": "cd ./packages/api && vite build",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js",
    "publish:linux": "electron-builder --linux --config .electron-builder.config.js --publish always",
    "publish:win": "electron-builder --win --config .electron-builder.config.js --publish always",
    "publish:mac": "electron-builder --mac --config .electron-builder.config.js --publish always",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "npm run build && node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:api": "tsc --noEmit -p packages/api/tsconfig.json",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer && npm run typecheck:api",
    "prerelease:patch": "npm run typecheck && npm run lint && npm run release:patch:dry",
    "prerelease:minor": "npm run typecheck && npm run lint && npm run release:minor:dry",
    "prerelease:major": "npm run typecheck && npm run lint && npm run release:major:dry",
    "release:patch": "node ./scripts/release.js --patch",
    "release:minor": "node ./scripts/release.js --minor",
    "release:major": "node ./scripts/release.js --major",
    "release:patch:dry": "node ./scripts/release.js --patch --dry",
    "release:minor:dry": "node ./scripts/release.js --minor --dry",
    "release:major:dry": "node ./scripts/release.js --major --dry"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^0.8.2",
    "@quasar/vite-plugin": "^1.3.0",
    "@types/compression": "^1.7.2",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/express": "^4.17.17",
    "@types/lodash.isequal": "^4.5.6",
    "@types/lowdb": "^1.0.11",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.1",
    "@types/node-forge": "^1.3.1",
    "@types/user-agents": "^1.0.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.3.0",
    "@vueuse/core": "^9.13.0",
    "cross-env": "7.0.3",
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "3.2.0",
    "electron-updater": "5.3.0",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "happy-dom": "^8.9.0",
    "nano-staged": "0.8.0",
    "nock": "^13.3.0",
    "playwright": "^1.31.1",
    "rimraf": "^4.1.2",
    "simple-git": "^3.16.1",
    "simple-git-hooks": "2.8.1",
    "terser": "^5.16.5",
    "typed-emitter": "^2.1.0",
    "typescript": "4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.1",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "dependencies": {
    "@fontsource/roboto": "^4.5.8",
    "@mdi/font": "^7.1.96",
    "@mdi/js": "^7.1.96",
    "@quasar/extras": "^1.15.11",
    "axios": "^1.3.4",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^2.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "express": "^4.18.2",
    "file-type": "^18.2.1",
    "filenamify": "^5.1.1",
    "fuse.js": "^6.6.2",
    "image-size": "^1.0.2",
    "lodash.isequal": "^4.5.0",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "openid-client": "^5.4.0",
    "pinia": "^2.0.32",
    "puppeteer": "^19.7.2",
    "puppeteer-cluster": "^0.23.0",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-adblocker-no-vulnerabilities": "^2.12.5",
    "puppeteer-extra-plugin-stealth": "^2.11.1",
    "quasar": "^2.11.6",
    "sanitize-filename": "^1.6.3",
    "semver": "^7.3.8",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "systeminformation": "^5.17.10",
    "user-agents": "^1.0.1295",
    "uuid": "^9.0.0",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  }
}
